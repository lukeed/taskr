{
  "name": "fly",
  "version": "1.4.1",
  "description": "Modern Build System",
  "license": "MIT",
  "repository": "flyjs/fly",
  "homepage": "https://github.com/flyjs/fly",
  "author": {
    "name": "Jorge Bucaran",
    "email": "j@bucaran.me",
    "url": "https://github.com/bucaran"
  },
  "contributors": [
    {
      "name": "Luke Edwards",
      "email": "luke@lukeed.com",
      "url": "https://lukeed.com"
    }
  ],
  "main": "lib/index.js",
  "bin": "cli.js",
  "files": [
    "lib",
    "cli.js"
  ],
  "dependencies": {
    "arrify": "^1.0.1",
    "bluebird": "^3.4.6",
    "chalk": "^1.1.3",
    "chokidar": "^1.6.0",
    "find-up": "^2.0.0",
    "flatten": "^1.0.2",
    "globby": "^6.0.0",
    "minimist": "^1.2.0",
    "mkdirp": "^0.5.1",
    "prettyjson": "^1.1.2",
    "rimraf": "^2.4.2",
    "update-notifier": "^0.5.0"
  },
  "devDependencies": {
    "tap-spec": "^4.1.1",
    "tape": "^4.2.2",
    "xo": "^0.12.0"
  },
  "scripts": {
    "test": "xo && tape test/*.js | tap-spec"
  },
  "keywords": [
    "cli",
    "task",
    "build",
    "async",
    "await",
    "minify",
    "uglify",
    "promise",
    "pipeline",
    "generator",
    "coroutine",
    "automation",
    "task runner",
    "build system"
  ],
  "engines": {
    "node": ">= 4.6.0"
  },
  "xo": {
    "semicolon": true,
    "esnext": true,
    "ignore": [
      "examples/**/*.js"
    ],
    "rules": {
      "babel/object-shorthand": 0,
      "no-unused-expressions": 1,
      "guard-for-in": 1,
      "no-loop-func": 0
    }
  }
}
