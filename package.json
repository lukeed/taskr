{
  "name": "fly",
  "version": "0.8.3",
  "description": "Modern Build System",
  "main": "dist/index.js",
  "files": [
    "bin/",
    "dist/"
  ],
  "bin": {
    "fly": "./bin/index"
  },
  "dependencies": {
    "babel-core": "*",
    "babel-runtime": "*",
    "chokidar": "^1.0.5",
    "clor": "*",
    "co": "^4.5.4",
    "concat-with-sourcemaps": "^1.0.2",
    "debug": "^2.2.0",
    "fly-util": "*",
    "interpret": "^0.6.5",
    "mkdirp": "^0.5.1",
    "mz": "^2.0.0",
    "parsec": "*",
    "prettyjson": "^1.1.2",
    "rimraf": "^2.4.2",
    "source-map": "^0.4.4",
    "update-notifier": "^0.5.0"
  },
  "devDependencies": {
    "babel": "*",
    "babel-eslint": "*",
    "coffee-script": "*",
    "eslint": "*",
    "fly-babel": "*",
    "fly-eslint": "*",
    "tap-nyan": "*",
    "tap-spec": "*",
    "tape": "*",
    "touch": "*",
    "rimraf": "*",
    "coveralls": "*",
    "isparta": "*"
  },
  "scripts": {
    "setup": "npm i && npm run test && npm run symlink",
    "symlink": "ln -s $PWD/bin/index /usr/local/bin/fly",
    "clean": "rimraf dist",
    "lint": "eslint src test",
    "coverage": "babel-node node_modules/.bin/isparta cover test/*.js",
    "coveralls": "npm run coverage -s && coveralls < coverage/lcov.info",
    "postcoveralls": "rimraf coverage",
    "prebuild": "npm run lint -s && npm run clean -s",
    "build": "babel --optional runtime src -d dist",
    "postbuild": "npm test -s",
    "test": "babel-node ./node_modules/tape/bin/tape test/*.js | tspec",
    "deploy": "git pull --rebase origin master && git push origin master",
    "prepublish": "npm run build -s",
    "patch": "npm version patch && npm publish",
    "minor": "npm version minor && npm publish",
    "major": "npm version major && npm publish",
    "postpublish": "git push origin master --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flyjs/fly.git"
  },
  "keywords": [
    "cli",
    "task",
    "build",
    "async",
    "await",
    "minify",
    "uglify",
    "promise",
    "pipeline",
    "generator",
    "coroutine",
    "automation",
    "build system",
    "task runner"
  ],
  "author": "Jorge Bucaran",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/flyjs/fly/issues"
  },
  "engines": {
    "iojs": ">= 1.0.0",
    "node": ">= 0.12.0"
  },
  "homepage": "https://github.com/flyjs/fly"
}
